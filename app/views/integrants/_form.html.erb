      <h2><%= pluralize(@integrant.errors.count, "error") %> prohibited this integrant from being saved:</h2>

      <ul>
      <% @integrant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
