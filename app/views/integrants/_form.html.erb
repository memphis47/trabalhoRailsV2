    <p><strong>Selecione uma das orquestras para relacionar o integrante :</strong></p>  
      <% options = options_from_collection_for_select(@orchestra, 'id', 'name') %>
      <%= f.select :orchestra_id,  options %>
  </div>
  <div class="field">
    <p><strong>Selecione um instrumento para o integrante :</strong></p> 
    <% options = options_from_collection_for_select(@instrument, 'id', 'name') %>
    <%= f.select :instrument_id,  options %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
