<h1>Listing instruments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @instruments.each do |instrument| %>
      <tr>
        <td><%= instrument.name %></td>
        <td><%= button_to 'Show', instrument , :method =>"get" %></td>
        <%if(@current_user.auth=="admin")%>
          <td><%= button_to 'Edit', edit_instrument_path(instrument) , :method =>"get"%></td>
          <td><%= button_to 'Destroy', instrument, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if(@current_user.auth=="admin")%>
  
  <%= button_to 'New Instrument', new_instrument_path , :method =>"get"%>
<%end%>
