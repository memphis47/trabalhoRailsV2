<h1>Listing instruments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @instruments.each do |instrument| %>
      <tr>
        <td  class="um"><%= instrument.name %></td>
        <td  class="botao"><%= button_to 'Show', instrument,:class => "button" , :method =>"get" %></td>
        <%if(@current_user.auth=="admin")%>
          <td  class="botao"><%= button_to 'Edit', edit_instrument_path(instrument),:class => "button" , :method =>"get"%></td>
          <td  class="botao"><%= button_to 'Destroy', instrument,:class => "button", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if(@current_user.auth=="admin")%>
  
  <%= button_to 'New Instrument', new_instrument_path ,:class => "button", :method =>"get"%>
<%end%>
